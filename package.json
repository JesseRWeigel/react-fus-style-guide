{
  "name": "react-style-guide",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "node-sass": "^3.13.0",
    "react-scripts": "0.7.0"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "scripts": {
    "start": "npm run watch-css & react-scripts start",
    "build": "npm run build-css && react-scripts build",
    "build-css": "node-sass public/sass/style.scss public/css/style.css",
    "watch-css": "node-sass public/sass/style.scss public/css/style.css -w",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
